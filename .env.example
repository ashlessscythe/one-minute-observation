PORT=3001
NODE_ENV=development

REACT_APP_API_URL=http://localhost:3001
# DATABASE URL
DATABASE_URL=postgresql://user:pass@domain.tld/dbname?sslmode=require

REACT_APP_AUTHORIZER_URL=https://[your-authorizer-instance]
REACT_APP_AUTHORIZER_CLIENT_ID=[your-client-id]

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
